<div class="navbar-wagon">
  <!-- Logo -->

    <div class="navbar-wagon-brand">
      <h4><%= link_to "Baby Surfers", about_path %></h4>
    </div>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">


    <!-- Desktop Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
      <i class="dropdown-toggle button-circle circle" data-toggle="dropdown"><%= image_tag "baby-face-white.png", alt: "baby-face-black", width: 35, height: 50, style:"padding-bottom: 17px;" %></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
       <% if user_signed_in? %>
                      <li>
              <%= link_to profile_path(current_user) do %>
              <i class="fa fa-user"></i> My Profile
              <% end %>
            </li>
            <li>
              <%= link_to conversations_path do %>
                <i class="fa fa-comments"></i> Conversations
              <% end %>
            </li>
            <li>
              <%= link_to events_path do %>
                <i class="fa fa-calendar"></i> Find an event
              <% end %>
            </li>
            <li>
              <%= link_to profiles_path do %>
                <i class="fa fa-address-book"></i> Find a surfer
              <% end %>
            </li>
            <li>
              <%= link_to new_event_path do %>
                <i class="fa fa-calendar-plus"></i> Create an event
              <% end %>
            </li>
            <li>
              <%= link_to about_path do %>
                <i class="fa fa-globe"></i> About us
              <% end %>
            </li>
                        <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
