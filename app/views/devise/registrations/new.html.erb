<div class="text-center">
<h2 class="log-in">Sign up</h2>
</div>
<hr>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="signup-screen">
    <%= f.input :first_name, placeholder: "Kelly Slater",  input_html: {class: "input-form"} %>
    <%= f.input :email,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "email", class: "input-form"},
                placeholder: "nico@babysurfers.com" %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" , class: "input-form"} %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: "input-form" } %>
  </div>
 <div class="space-top text-center">
  <div class="form-actions">
    <%= f.button :submit, "Sign up", {class: "btn btn-done"} %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
