<div class="background_form" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url('<%= image_path 'home_page1.jpg' %>');"></div>
<div class="background_gray"></div>
<div class="text-center">
<h2 class="log-in">Log in</h2>
</div>
<hr>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="signup-screen">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "input-form" },
                placeholder: "Email" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "input-form" },
                placeholder: "Password" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
 <div class="text-center">
  <div class="form-actions">
    <%= f.button :submit, "Connect", {class: "btn btn-login"} %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
