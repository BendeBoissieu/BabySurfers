<div class="container-form">
  <% @event.joins.each do |join| %>
    <% if  join.user_id == current_user.id %>
      <%= simple_form_for [@event, @join] do |f| %>
      <h1>You are already joining!</h1>
       <%= f.submit "Back to the event", name: "no", class: "btn btn-login" %>
       <% end %>
        <% @marker = "yes" %>
    <% else %>
     <% end %>
  <% end %>
      <% if @marker.nil? %>
        <%= simple_form_for [@event, @join] do |f| %>
          <p>Are you sure?</p>
          <%= f.submit "Yes", class: "btn btn-success" %>
          <%= f.submit "No", name: "no", class: "btn btn-danger" %>
        <% end %>
      <% end %>
</div>
