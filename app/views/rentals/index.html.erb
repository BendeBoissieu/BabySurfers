<div class="background_index" style="background-image:  url('<%= image_path 'home_page.jpg' %>');"></div>
  <div class="arrow-left-back-page">
     <%= link_to '<i class="fa fa-angle-left button-white-left"></i>'.html_safe,  root_path() %>
  </div>
  <div class="title"><h1>RENTALS</h1></div>
  <div class="row">
    <% if @rentals.count == 0 %>
      <p> No rental available</p>
    <% else %>
    <% @rentals.each do |rental| %>
      <div class="col-xs-12 col-md-4 col-sm-6">
        <div class="card">
          <%= link_to "", rental_path(rental), class: "card-link" %>
          <div class="card-title">
            <h2> <%= rental.title %>  by <%= rental.user.first_name %> </h2>
            <!-- .upcase to put in block letters -->
          </div>

          <%= link_to profile_path(rental.user_id) do %>
                    <li><img
                     class="rental_picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=  rental.user.profile.photoprofile.url %>');" ></li>
                    <li style="padding-left: 40px;">  <%= rental.user.first_name %> </li>
                  <% end %>
          <div class="rental_description">
            <p><%= rental.description %></p>
          </div>
          <div class="rental_price">
            <p><%= rental.price %></p>
          </div>
          <div class="rental_contact">
            <p><%= rental.phone %></p>
          </div>
        </div>
    <% end %>
   </div>
   <% end %>
 </div>
</div>
