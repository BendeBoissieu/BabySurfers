      <div class="collapse" id="collapseWeather">
        <div class="description_event">
          <p>Min temperature: <%=@weather["main"]["temp_min"]%>°C</p>
          <p>Max temperature: <%=@weather["main"]["temp_max"]%>°C</p>
          <p>Wind: <%=@wind_speed_km %> km/h   <i class="fas fa-arrow-up rotate_arrow", style=" transform: rotate(<%=@weather["wind"]["deg"]%>deg);"></i> </p>
          <table id="weather">
            <tr>
              <td><%= (Date.current+1).strftime("%a %d") %> 00h</td>
              <td><%= (Date.current+1).strftime("%a %d") %> 06h</td>
              <td><%= (Date.current+1).strftime("%a %d") %> 12h</td>
              <td><%= (Date.current+1).strftime("%a %d") %> 18h</td>
            </tr>
            <tr>
              <% for i in (0..3) %>
              <td style="background-color:  #32B796;"><%=@weatherspeed_5days[i]%>  <i class="fas fa-arrow-up rotate_arrow", style=" transform: rotate(<%=@weater_5days["list"][i]["wind"]["deg"]%>deg);"></i></td>
              <% end %>
            </tr>
          </table>
          <br>
          <table id="weather">
            <tr>
              <td><%= (Date.current+2).strftime("%a %d") %> 00h</td>
              <td><%= (Date.current+2).strftime("%a %d") %> 06h</td>
              <td><%= (Date.current+2).strftime("%a %d") %> 12h</td>
              <td><%= (Date.current+2).strftime("%a %d") %> 18h</td>
            </tr>
            <tr>
              <% for i in (4..7) %>
              <td style="background-color:  #32B796;"><%=@weatherspeed_5days[i]%>  <i class="fas fa-arrow-up rotate_arrow", style=" transform: rotate(<%=@weater_5days["list"][i]["wind"]["deg"]%>deg);"></i></td>
              <% end %>
            </tr>
          </table>
          <br>
